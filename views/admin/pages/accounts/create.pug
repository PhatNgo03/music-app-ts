extends ../../layouts/default.pug

block main 
  h1(class="mb-4") Thêm mới tài khoản

  form(
    action=`/${prefixAdmin}/accounts/create`
    method="POST"
    enctype="multipart/form-data"
  )

    div(class="form-group mb-3") 
      label(for="fullName") Họ tên *
      input(
        type="text"
        class="form-control"
        id="fullName"
        name="fullName"
      )
    div(class="form-group mb-3") 
      label(for="email") Email *
      input(
        type="text"
        class="form-control"
        id="email"
        name="email"
      )   
    div(class="form-group mb-3") 
      label(for="password") Mật khẩu *
      input(
        type="password"
        class="form-control"
        id="password"
        name="password"
      )    
    div(class="form-group mb-3") 
      label(for="phone") Số điện thoại
      input(
        type="text"
        class="form-control"
        id="phone"
        name="phone"
    )   
    div.form-group.mb-3(upload-image)
        label(for="avatar") Avatar
        div.custom-file
          label(for="avatar" class="btn btn-secondary") Chọn tệp
          input(
            type="file"
            class="form-control-file"
            id="avatar"
            name="avatar"
            accept="image/*"
            upload-image-input
            style="display: none;"
          )
          div(
            class="image-preview-container"
          )
            img(
              src=""
              upload-image-preview
              class="image-preview"
              style="display: none"
            )
            button.upload-image-remove(
              upload-image-remove
              type="button"
              style="display: none"
            ) X
    div(class="form-group mb-3")
      label(for="role_id") Phân quyền 
      select(name="role_id" id="role_id" class="form-select")
        option(disabled) -- Chọn --
        each item in roles
          option(value=item._id) #{item.title}
    div(class="form-group mb-3")  
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusActive"
          name="status"
          value="active"
          checked
        )
        label(for="statusInActive" class="form-check-label") Hoạt động
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusInActive"
          name="status"
          value="inactive"
        )
        label(for="statusActive" class="form-check-label") Dừng Hoạt động
    div(class="form-group mb-3")
      button(
        type="submit"
        class="btn btn-primary"
      ) Tạo mới
  script(src="/admin/js/script.js")