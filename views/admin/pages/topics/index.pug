extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/sort.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/table-tree.pug
block main

    h1 Danh sách chủ đề

    .card.mb-3
      .card-header Bộ lọc và tìm kiếm
      .card-body
        .row
          .col-6
            +filter-status(filter)
          .col-6
            +search(keyword)

    .card.mb-3 
        .card-header Sắp xếp 
        .card-body
          .row
            .col-4 
              +sort()
    .card.mb-3
      .card-header Danh sách chủ đề bài hát
        .card-body
          .row   
            .col-8
              +form-change-multi(`/${prefixAdmin}/topics/change-multi?_method=PATCH`)
            .col-4 
              a(
                href=`/${prefixAdmin}/topics/create`
                class="btn btn-outline-success"
              ) + Thêm mới
          table(
            class="table table-hover table-sm"
            checkbox-multi
          )
            thead
              tr
                th 
                  input(type="checkbox" name="checkall")
                th STT
                th Hình Ảnh
                th Tiêu đề
                th Vị trí
                th Trạng thái
                th Hành động
            tbody
              +table-tree(records)
      +pagination(pagination)
    form(
    action=""
    method="POST"
    id="form-change-status"
    data-path=`${prefixAdmin}/topics/change-status`
    )
    form(
      action=""
      method="POST"
      id="form-delete-item"
      data-path=`/${prefixAdmin}/topics/delete`
    )

    script(src="/admin/js/topic.js")