extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/sort.pug

block main

    h1 Danh sách chủ đề

    .card.mb-3
      .card-header Bộ lọc và tìm kiếm
      .card-body
        .row
          .col-6
            +filter-status(filterStatus)
          .col-6
            +search(keyword)

    .card.mb-3 
        .card-header Sắp xếp 
        .card-body
          .row
            .col-4 
              +sort()
    .card.mb-3
      .card-header Danh sách chủ đề bài hát
        .card-body
          .row   
            .col-8
            .col-4 
              a(
                href=`${prefixAdmin}/topics/create`
                class="btn btn-outline-success"
              ) + Thêm mới
          table(
            class="table table-hover table-sm"
            checkbox-multi
          )
            thead
              tr
                th 
                  input(type="checkbox" name="checkall")
                th STT
                th Hình Ảnh
                th Tiêu đề
                th Trạng thái
                th Hành động
            tbody
              each item, index in topics
                tr
                  td 
                    input(
                      type="checkbox"
                      name="id"
                      value=item.id
                    )
                  td #{pagination.limitItems*(pagination.currentPage - 1) + (index+1)}
                  td
                    img(
                      src=item.avatar
                      alt=item.title
                      width="100px"
                      height="auto"
                    )
                  td #{item.title}
                  td
                    if item.status === "active"
                      a(
                        href="javascript:;"
                        data-status=item.status
                        data-id=item.id
                        class="badge badge-success status-active"
                        button-change-status
                      ) Hoạt động
                    else
                      a(
                        href="javascript:;"
                        data-status=item.status
                        data-id=item.id
                        class="badge badge-danger status-inactive"
                        button-change-status
                      ) Dừng hoạt động
                  td
                    a(
                      href=`/${prefixAdmin}/topics/detail/${item.id}`
                      class="btn btn-secondary btn-sm mx-1") Chi tiết
                    a(
                      href=`/${prefixAdmin}/topics/edit/${item.id}`
                      class="btn btn-warning btn-sm mx-1") Sửa
                    a(
                      class="btn btn-danger btn-sm"
                      data-id = item.id
                      button-delete
                    ) Xóa
                    
      +pagination(pagination)

    script(src="/admin/js/topic.js")