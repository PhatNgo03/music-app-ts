mixin search(keyword)
   form(id="form-search" class="d-flex align-items-center gap-2")
        .input-group
            input(
                type="text"
                placeholder="Nhập từ khóa"
                name="keyword"
                class="form-control"
                value=keyword
            )
            .input-group-append
                button(
                    class="btn btn-success px-3"
                    type="submit"
                ) Tìm
