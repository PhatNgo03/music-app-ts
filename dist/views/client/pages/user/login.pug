extends ../../layouts/default.pug

block main 
  .container.my-5.d-flex.justify-content-center 
    .card.shadow-lg.p-4.rounded-lg(style="max-width: 400px; width: 100%")
      .card-body
        h1.text-center.text-primary.mb-4 Đăng nhập 
        form(
          action=`/user/login`
          method="POST"
        )
          .mb-3
            label.form-label(for="email") Email 
            input.form-control(
              type="email"
              id="email"
              name="email"
              placeholder="Nhập email của bạn"
            )
          .mb-3
            label.form-label(for="password") Mật khẩu 
            input.form-control(
              type="password"
              id="password"
              name="password"
              placeholder="Nhập mật khẩu"
            )
          .d-grid
            button.btn.btn-primary.btn-lg(type="submit") Đăng nhập
        .text-center.mt-3
          a(href="/user/password/forgot" class="text-muted") Quên mật khẩu?
